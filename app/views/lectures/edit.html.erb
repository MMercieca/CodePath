<div class="w-full mx-auto mt-8">
  <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <h2 class="text-2xl font-bold text-center text-gray-900 mb-6">Edit Lecture</h2>
    <%= form_with url: "/lectures/#{@lecture.id}/update", method: :post, id: "edit_lecture", locals: true do |form| %>
      <div class="mb-4">
        <%= form.label :name, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= form.text_field :name, value: @lecture.name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="mb-6">
        <%= form.label :description, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= form.text_area :description, value: @lecture.description, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline h-32" %>
      </div>

      <div class="flex items-center justify-center">
        <%= form.submit "Create lecture", style: "display: none;", id: 'save-lecture' %>
        <a href="javascript:document.getElementById('save-lecture').click()" class="link-button green-button">Save lecture</a>
        &nbsp;
        <a href="/lectures/<%= @lecture.id %>" class="link-button blue-button">View Lecture</a>
      </div>
      
    <% end %>

    <div class="flex items-center justify-center mt-5">
      <form action="/lectures/<%= @lecture.id %>/delete" method="post">
        <button type="submit" id="delete-lecture" style="display: none;"></button>
        <a href="javascript:document.getElementById('delete-lecture').click()" class="link-button red-button">Delete Lecture</a>
      </form>
    </div>

  </div>
</div>
