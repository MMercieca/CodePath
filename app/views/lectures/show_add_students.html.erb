<div class="w-full max-w-md mx-auto mt-8">
  <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <h2 class="text-2xl font-bold text-center text-gray-900 mb-6">Add Students</h2>
    <%= form_with url: "/lectures/#{@lecture.id}/add_students", method: :post, id: "add_students", locals: true do |form| %>
      <div class="mb-6">
        <%= form.label :student_emails, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= form.text_area :student_emails, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline h-32" %>
      </div>

      <div class="flex items-center justify-center">
        <%= form.submit "Add Students", style: "display: none;", id: 'add-students' %>
        <a href="javascript:document.getElementById('add-students').click()" class="link-button green-button">Add Students</a>
      </div>
    <% end %>

    
  </div>
  
</div>
